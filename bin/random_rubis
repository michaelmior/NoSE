#   /Range#/,
#   /Array#/,
#   /Set#/,
#   /Hash#/,
#   /Integer#downto/,
#   /Hashids#/,
#   /String#/,
#   /Enumerable#/,
#   /Integer#times/,
#   /Class#new/
# ])
# printer = RubyProf::CallTreePrinter.new(result)
# printer.print(File.open('prof.out', 'w'))
